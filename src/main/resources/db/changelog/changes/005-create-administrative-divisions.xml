<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
        http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <!-- Create provinces table -->
    <changeSet id="050-create-provinces-table" author="digistock">
        <createTable tableName="provinces">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="code" type="VARCHAR(10)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="updated_by" type="VARCHAR(255)"/>
            <column name="version" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="provinces" indexName="idx_province_name" unique="true">
            <column name="name"/>
        </createIndex>
        <createIndex tableName="provinces" indexName="idx_province_code" unique="true">
            <column name="code"/>
        </createIndex>
    </changeSet>

    <!-- Create districts table -->
    <changeSet id="051-create-districts-table" author="digistock">
        <createTable tableName="districts">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(20)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="province_id" type="UUID">
                <constraints nullable="false"
                    foreignKeyName="fk_district_province"
                    references="provinces(id)"/>
            </column>
            <column name="active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="updated_by" type="VARCHAR(255)"/>
            <column name="version" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="districts" indexName="idx_district_name">
            <column name="name"/>
        </createIndex>
        <createIndex tableName="districts" indexName="idx_district_code" unique="true">
            <column name="code"/>
        </createIndex>
        <createIndex tableName="districts" indexName="idx_district_province">
            <column name="province_id"/>
        </createIndex>
    </changeSet>

    <!-- Create wards table -->
    <changeSet id="052-create-wards-table" author="digistock">
        <createTable tableName="wards">
            <column name="id" type="UUID">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="VARCHAR(100)">
                <constraints nullable="false"/>
            </column>
            <column name="code" type="VARCHAR(30)">
                <constraints nullable="false" unique="true"/>
            </column>
            <column name="district_id" type="UUID">
                <constraints nullable="false"
                    foreignKeyName="fk_ward_district"
                    references="districts(id)"/>
            </column>
            <column name="active" type="BOOLEAN" defaultValueBoolean="true">
                <constraints nullable="false"/>
            </column>
            <column name="created_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="updated_at" type="TIMESTAMP" defaultValueComputed="CURRENT_TIMESTAMP">
                <constraints nullable="false"/>
            </column>
            <column name="created_by" type="VARCHAR(255)"/>
            <column name="updated_by" type="VARCHAR(255)"/>
            <column name="version" type="BIGINT" defaultValueNumeric="0">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <createIndex tableName="wards" indexName="idx_ward_name">
            <column name="name"/>
        </createIndex>
        <createIndex tableName="wards" indexName="idx_ward_code" unique="true">
            <column name="code"/>
        </createIndex>
        <createIndex tableName="wards" indexName="idx_ward_district">
            <column name="district_id"/>
        </createIndex>
    </changeSet>

</databaseChangeLog>
